<%- include('../../includes/top.ejs') %>
  <!-- Page Title -->
  <h1 class="h2 mt-5 mb-3">Search Result</h1>
  <!-- Search Bar -->
  <%- include('../../components/search-bar.ejs') %>
  <!-- Car item -->
  <% if (!car) { %>
    <p class="h5 mt-4 text-center text-secondary">No Result : '<%= searchInput %>'</p>
  <% } else { %>
    <div class="card">
      <div class="card-body p-4">
        <h5 class="card-title"><%= car.carNum %></h5>
        <p class="card-text"><%= car.owner %></p>
        <div class="d-flex justify-content-between">
          <span class="card-text fw-semibold"><%= car.model %></span>
          <a href="/cars/detail/<%= car.carNum %>" class="text-decoration-none">More <i class="bi bi-arrow-up-right"></i></a>
        </div>
      </div>
    </div>
  <% } %>
<%- include('../../includes/bottom.ejs') %>
